page{
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;

  width: 100%;
}

.order-info{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  width: 100%;
  padding-top: 24rpx;
  background: #fff;
  height: auto;
  overflow: hidden;

  font-size: 30rpx;
  color: #666;
}
/* 下单时间 */
.order-info .order-time{
  width: 690rpx;
  height: 42rpx;
}

.order-info .order-num{
  width: 690rpx;
  height: 42rpx;
}

.order-btn{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 80rpx;
}

/* 回首页按钮 */
.order-btn .home {
  width: 180rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;

  border: 1px solid #6dbb6d;
  border-radius: 26rpx;
  margin: 0 16rpx;
}

.order-btn .btn{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  height: 60rpx;
  border-radius: 6rpx;
  text-align: center;
  margin: 0 16rpx;
  padding: 0 20rpx;
}

.order-btn .cancel{
  background: linear-gradient(to right, #83d883 0%, #6dbb6d 100%);
  color: #fff;
}

.order-btn .pay{
  background: #6dbb6d;
  color: #fff;
}



.order-goods{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  margin-top: 20rpx;
  background: #fff;
  width: 100%;
}

.order-goods .head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  width: 690rpx;
  height: 90rpx;
  border-bottom: 1px solid #f4f4f4;
}

.order-goods .head .label{
  font-size: 30rpx;
  color: #333;
}

.order-goods .head .status{
  font-size: 30rpx;
  color: #b4282d;
}

.order-goods .item{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 690rpx;
  height: 192rpx;
  border-bottom: 1px solid #f4f4f4;
}

.order-goods .item:last-child{
  border-bottom: none;
}

.order-goods .item .img{
  height: 146rpx;
  width: 146rpx;
  background: #f4f4f4;
}

.order-goods .item .img image{
  height: 146rpx;
  width: 146rpx;
}

.order-goods .item .info{
  flex: 1;  /*自动伸缩宽度*/
  height: 146rpx;
  margin-left: 20rpx;
}

.order-goods .item .content{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  margin-top: 8rpx;
  height: 34rpx;
  margin-bottom: 10rpx;
}

.order-goods .item .content .name{
  width: 450rpx;
  height: 34rpx;
  line-height: 34rpx;
  color: #333;
  font-size: 30rpx;
  white-space:nowrap;   /* 不换行 */
  overflow: hidden;
  text-overflow: ellipsis;   
}

.order-goods .item .content .number{
  height: 34rpx;
  text-align: right;
  line-height: 34rpx;
  color: #b4282d;
  font-size: 30rpx;
}

.order-goods .item .attr{
  height: 30rpx;
  line-height: 30rpx;
  color: #666;
  margin-bottom: 24rpx;
  font-size: 24rpx;
  white-space:nowrap;   /* 不换行 */
  overflow: hidden;
  text-overflow: ellipsis;   
}

.order-goods .item .price{
  height: 30rpx;
  line-height: 30rpx;
  color: #b4282d;
  font-size: 30rpx;
}

/*订单底部*/
.order-bottom{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  margin-top: 20rpx;
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
}

.order-bottom .address{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;

  width: 690rpx;
  height: 128rpx;
  padding-top: 24rpx;
  border-bottom: 1px solid #f4f4f4;
}

.order-bottom .address .head{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;

  width: 100%;
  height: 36rpx;
  margin-bottom: 8rpx;
}

.order-bottom .address .name{
  height: 36rpx;
  width: 140rpx;
  font-size: 24rpx;
}

.order-bottom .address .mobile{
  flex: 1;
  height: 36rpx;
  font-size: 24rpx;
}

.order-bottom .address .body{
  width: 100%;
  height: 36rpx;
  font-size: 24rpx;
}

.order-bottom .total{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;

  width: 690rpx;
  height: 106rpx;
  border-bottom: 1px solid #f4f4f4;
}

.order-bottom .total .content{
  height: 26rpx;
  margin-bottom: 8rpx;
}

.order-bottom .total .label{
  width: 140rpx;
  height: 36rpx;
  font-size: 24rpx;
}

.order-bottom .total .txt{
  flex: 1;
  height: 36rpx;
  font-size: 24rpx;
}

.order-bottom .pay-fee{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;

  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.order-bottom .pay-fee .label{
  width: 140rpx;
  font-size: 30rpx;
  color: #b4282d;
}

.order-bottom .pay-fee .txt{
  flex:1;
  font-size: 30rpx;
  color: #b4282d;
}
